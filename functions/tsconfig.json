{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false, // Enforce type safety
    "noImplicitReturns": true,
    "noUnusedLocals": false, // Helps to keep the code clean
    "noUnusedParameters": false, // Helps to keep the code clean
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true, // Speeds up compilation by skipping type checks on declaration files
    "forceConsistentCasingInFileNames": true // Ensures consistent file naming
  },
  "include": ["src/**/*.ts"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "lib"] // Exclude node_modules and output directory
}
