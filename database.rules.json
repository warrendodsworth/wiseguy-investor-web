{
  "rules": {
    ".read": false,
    ".write": false,

    "presence": {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    "typing": {
      "$chat_id": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },

    "metadata": {
      "$user_id": {
        ".read": "auth.uid != null",
        ".write": false
      }
    },

    "users": {
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    }
  }
}
